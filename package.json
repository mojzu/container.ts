{
  "name": "container.ts",
  "version": "1.0.0-beta.3",
  "description": "Modular application framework",
  "main": "./index.js",
  "typings": "./index.d.ts",
  "repository": "https://github.com/mojzu/container.ts.git",
  "author": "mojzu <mail@mojzu.net>",
  "license": "Unlicense",
  "files": [
    "/index.d.ts",
    "/index.js",
    "/index.js.map",
    "/container/**/!(*.test).d.ts",
    "/container/**/!(*.test).js",
    "/container/**/!(*.test).js.map",
    "/lib/**/!(*.test).d.ts",
    "/lib/**/!(*.test).js",
    "/lib/**/!(*.test).js.map"
  ],
  "scripts": {
    "clean": "ts-node fuse.ts clean",
    "distclean": "ts-node fuse.ts distclean",
    "lint": "ts-node fuse.ts lint",
    "test": "ts-node fuse.ts test",
    "example": "ts-node fuse.ts example",
    "dist": "ts-node fuse.ts dist"
  },
  "dependencies": {
    "@types/debug": "^0.0.30",
    "@types/lodash": "^4.14.90",
    "awilix": "^3.0.0",
    "debug": "^3.1.0",
    "lodash": "^4.17.4",
    "rxjs": "^5.5.5"
  },
  "optionalDependencies": {
    "@types/moment-timezone": "^0.5.2",
    "@types/node-ipc": "^9.1.0",
    "@types/validator": "^6.3.0",
    "moment-timezone": "^0.5.14",
    "node-ipc": "^9.1.1",
    "validator": "^9.2.0"
  },
  "devDependencies": {
    "@types/del": "^3.0.0",
    "@types/jest": "^21.1.8",
    "@types/node": "^8.5.1",
    "@types/yargs": "^10.0.0",
    "del": "^3.0.0",
    "fuse-box": "^2.4.0",
    "jest": "^21.2.1",
    "ts-jest": "^21.2.4",
    "ts-node": "^4.0.1",
    "tslint": "^5.8.0",
    "typescript": "^2.6.2",
    "yargs": "^10.0.3"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(tsx?)$",
    "testPathIgnorePatterns": [
      "Mock.ts",
      "script.test.ts",
      "worker.test.ts"
    ],
    "mapCoverage": true,
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  }
}
